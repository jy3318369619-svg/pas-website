{
    // 有关 tasks.json 格式的文档，请参见
    // https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "dev",
            "group": "build",
            "label": "npm: dev",
            "detail": "启动 Vite 开发服务器",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "Local:.*http://localhost:[0-9]+"
                    }
                }
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "npm",
            "script": "build",
            "group": "build",
            "label": "npm: build",
            "detail": "构建生产版本",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "npm",
            "script": "preview",
            "group": "build", 
            "label": "npm: preview",
            "detail": "预览生产构建",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
